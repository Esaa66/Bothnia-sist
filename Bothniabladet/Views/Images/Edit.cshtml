@model Bothniabladet.Data.Image

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>Edit Image</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" role="form" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ImageId" />
                        <div class="form-group">
                            <label asp-for="ImageTitle" class="control-label"></label>
                            <input asp-for="ImageTitle" class="form-control" required aria-describedby="imageTitleHelp"/>
                            <small id="imageTitleHelp" class="form-text text-muted">Enter the title of the image.</small>
                            <span asp-validation-for="ImageTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BasePrice" class="control-label"></label>
                            <input asp-for="BasePrice" class="form-control" type="number" required aria-describedby="basePriceHelp"/>
                            <small id="basePriceHelp" class="form-text text-muted">Enter the base price of the image.</small>
                            <span asp-validation-for="BasePrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Issue" class="control-label"></label>
                            <input asp-for="Issue" class="form-control" required aria-describedby="issueHelp"/>
                            <small id="issueHelp" class="form-text text-muted">Enter the issue related to the image.</small>
                            <span asp-validation-for="Issue" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Section" class="control-label"></label>
                            <select asp-for="Section" class="form-control">
                                <option value="Sport">Sport</option>
                                <option value="Culture">Culture</option>
                                <option value="Economy">Economy</option>
                                <option value="News">News</option>
                                <option value="International">International</option>
                            </select>
                            <span asp-validation-for="Section" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label for="keywords" class="control-label">Taggar: (separera med mellanslag)</label>
                            <div id="keyword_parent"></div>
                            <span class="badge badge-pill badge-primary"></span>
                            <input type="text" id="keyword_field" value="" />
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="CreatedAt" class="control-label"></label>
                            <input asp-for="CreatedAt" class="form-control" readonly />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-3">
    <div class="col-md-8">
        <a href="javascript:history.back()" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>
