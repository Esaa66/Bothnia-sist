@model IEnumerable<Bothniabladet.Models.ImageModels.ImageSummaryViewModel>

<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Thumbnail</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Section)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>Keywords</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.ThumbnailDataString" class="img-thumbnail" style="width:100px;height:auto;" />
                    </a>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Section)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@String.Join(", ", item.Keywords)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
