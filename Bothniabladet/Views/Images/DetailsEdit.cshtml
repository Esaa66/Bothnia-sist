@model Bothniabladet.Models.ImageModels.GetEditedImageModel

@{
    ViewData["Title"] = "DetailsEdit";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <a href="javascript:history.back()" class="btn btn-secondary mb-3">
            <span class="glyphicon glyphicon-arrow-left"></span> Back to List
            </a>
            <div class="card bg-dark text-white">
                <img src="@ViewBag.ImageDataUrl" class="card-img" alt="@Html.DisplayFor(model => model.ImageTitle)" style="max-height:75vh; object-fit: cover;">
                <div class="card-img-overlay d-flex justify-content-center align-items-center">
                    <h1 class="card-title text-center">@Html.DisplayFor(model => model.ImageTitle)</h1>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h4>Details</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(model => model.ImageTitle): </strong> 
                        @Html.DisplayFor(model => model.ImageTitle)
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
