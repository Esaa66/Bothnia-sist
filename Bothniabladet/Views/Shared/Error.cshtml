@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">Oops, something went wrong!</h1>
    <p class="lead">We're sorry, but an error has occurred while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Development Mode</h4>
        <p>Switching to <strong>Development</strong> environment can provide more detailed information about the error occurred.</p>
        <hr>
        <p class="mb-0"><strong>Note:</strong> The Development environment shouldn't be enabled for deployed applications as it can potentially display sensitive information from exceptions to end users. 
        For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong> and restart the application.</p>
    </div>
    
    <a href="/" class="btn btn-primary">Go to Home Page</a>
</div>

